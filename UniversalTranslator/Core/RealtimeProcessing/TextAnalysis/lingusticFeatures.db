-- Create the Linguistic Features database
CREATE DATABASE linguistic_features;

-- Use the Linguistic Features database
USE linguistic_features;

-- Create the Species table
CREATE TABLE species (
    id INT PRIMARY KEY AUTO_INCREMENT,
    name VARCHAR(255) NOT NULL,
    code VARCHAR(10) NOT NULL,
    classification VARCHAR(255) NOT NULL
);

-- Create the Languages table
CREATE TABLE languages (
    id INT PRIMARY KEY AUTO_INCREMENT,
    species_id INT NOT NULL,
    name VARCHAR(255) NOT NULL,
    code VARCHAR(10) NOT NULL,
    script VARCHAR(255) NOT NULL,
    FOREIGN KEY (species_id) REFERENCES species(id)
);

-- Create the Phonetic Features table
CREATE TABLE phonetic_features (
    id INT PRIMARY KEY AUTO_INCREMENT,
    language_id INT NOT NULL,
    feature_name VARCHAR(255) NOT NULL,
    feature_description TEXT NOT NULL,
    FOREIGN KEY (language_id) REFERENCES languages(id)
);

-- Create the Syntactic Features table
CREATE TABLE syntactic_features (
    id INT PRIMARY KEY AUTO_INCREMENT,
    language_id INT NOT NULL,
    feature_name VARCHAR(255) NOT NULL,
    feature_description TEXT NOT NULL,
    FOREIGN KEY (language_id) REFERENCES languages(id)
);

-- Create the Semantic Features table
CREATE TABLE semantic_features (
    id INT PRIMARY KEY AUTO_INCREMENT,
    language_id INT NOT NULL,
    feature_name VARCHAR(255) NOT NULL,
    feature_description TEXT NOT NULL,
    FOREIGN KEY (language_id) REFERENCES languages(id)
);

-- Create the Pragmatic Features table
CREATE TABLE pragmatic_features (
    id INT PRIMARY KEY AUTO_INCREMENT,
    language_id INT NOT NULL,
    feature_name VARCHAR(255) NOT NULL,
    feature_description TEXT NOT NULL,
    FOREIGN KEY (language_id) REFERENCES languages(id)
);

