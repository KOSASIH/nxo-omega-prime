-- Create the Acoustic Models database
CREATE DATABASE acoustic_models;

-- Use the Acoustic Models database
USE acoustic_models;

-- Create the Species table
CREATE TABLE species (
    id INT PRIMARY KEY AUTO_INCREMENT,
    name VARCHAR(255) NOT NULL,
    code VARCHAR(10) NOT NULL,
    classification VARCHAR(255) NOT NULL
);

-- Create the Languages table
CREATE TABLE languages (
    id INT PRIMARY KEY AUTO_INCREMENT,
    species_id INT NOT NULL,
    name VARCHAR(255) NOT NULL,
    code VARCHAR(10) NOT NULL,
    script VARCHAR(255) NOT NULL,
    FOREIGN KEY (species_id) REFERENCES species(id)
);

-- Create the Acoustic Models table
CREATE TABLE acoustic_models (
    id INT PRIMARY KEY AUTO_INCREMENT,
    language_id INT NOT NULL,
    model_name VARCHAR(255) NOT NULL,
    model_type VARCHAR(50) NOT NULL, -- e.g., "HMM", "DNN", "CNN"
    model_file_path VARCHAR(255) NOT NULL,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    updated_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
    FOREIGN KEY (language_id) REFERENCES languages(id)
);

-- Create the Model Parameters table
CREATE TABLE model_parameters (
    id INT PRIMARY KEY AUTO_INCREMENT,
    model_id INT NOT NULL,
    parameter_name VARCHAR(255) NOT NULL,
    parameter_value VARCHAR(255) NOT NULL,
    FOREIGN KEY (model_id) REFERENCES acoustic_models(id)
);

-- Create the Model Performance table
CREATE TABLE model_performance (
    id INT PRIMARY KEY AUTO_INCREMENT,
    model_id INT NOT NULL,
    accuracy FLOAT NOT NULL,
    precision FLOAT NOT NULL,
    recall FLOAT NOT NULL,
    f1_score FLOAT NOT NULL,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (model_id) REFERENCES acoustic_models(id)
);

