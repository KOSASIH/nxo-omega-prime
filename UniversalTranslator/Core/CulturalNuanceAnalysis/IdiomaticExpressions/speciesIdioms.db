-- Create the Species Idioms database
CREATE DATABASE species_idioms;

-- Use the Species Idioms database
USE species_idioms;

-- Create the Species table
CREATE TABLE species (
    id INT PRIMARY KEY,
    name VARCHAR(255) NOT NULL,
    code VARCHAR(10) NOT NULL,
    classification VARCHAR(255) NOT NULL
);

-- Create the Languages table
CREATE TABLE languages (
    id INT PRIMARY KEY,
    species_id INT NOT NULL,
    name VARCHAR(255) NOT NULL,
    code VARCHAR(10) NOT NULL,
    script VARCHAR(255) NOT NULL,
    FOREIGN KEY (species_id) REFERENCES species(id)
);

-- Create the Idioms table
CREATE TABLE idioms (
    id INT PRIMARY KEY,
    language_id INT NOT NULL,
    idiom VARCHAR(255) NOT NULL,
    translation VARCHAR(255) NOT NULL,
    explanation VARCHAR(255) NOT NULL,
    FOREIGN KEY (language_id) REFERENCES languages(id)
);

-- Create the Idiom Variations table
CREATE TABLE idiom_variations (
    id INT PRIMARY KEY,
    idiom_id INT NOT NULL,
    variation VARCHAR(255) NOT NULL,
    FOREIGN KEY (idiom_id) REFERENCES idioms(id)
);

-- Create the Idiom Examples table
CREATE TABLE idiom_examples (
    id INT PRIMARY KEY,
    idiom_id INT NOT NULL,
    example VARCHAR(255) NOT NULL,
    FOREIGN KEY (idiom_id) REFERENCES idioms(id)
);

-- Create the Idiom Contexts table
CREATE TABLE idiom_contexts (
    id INT PRIMARY KEY,
    idiom_id INT NOT NULL,
    context VARCHAR(255) NOT NULL,
    FOREIGN KEY (idiom_id) REFERENCES idioms(id)
);

-- Create the Idiom Synonyms table
CREATE TABLE idiom_synonyms (
    id INT PRIMARY KEY,
    idiom_id INT NOT NULL,
    synonym VARCHAR(255) NOT NULL,
    FOREIGN KEY (idiom_id) REFERENCES idioms(id)
);

-- Create the Idiom Antonyms table
CREATE TABLE idiom_antonyms (
    id INT PRIMARY KEY,
    idiom_id INT NOT NULL,
    antonym VARCHAR(255) NOT NULL,
    FOREIGN KEY (idiom_id) REFERENCES idioms(id)
);

